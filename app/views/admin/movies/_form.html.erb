<%= form_with(model: movie, url: "/admin/movies") do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%#以下にデータベースに登録する形式に合わせてビューを作成していく。 %>
  <div>
    <%= form.label :name, "タイトル" %>
    <%= form.text_field :name %>
  </div>
  <br />

  <div>
    <%= form.label :year, "公開年" %>
    <%= form.number_field :year %>
  </div>
  <br />

  <div>
    <%= form.label :description, "概要" %>
    <%= form.text_area :description, cols: 50, rows: 10 %>
  </div>
  <br />

  <div>
    <%= form.label :image_url, "画像URL" %>
    <%= form.text_field :image_url %>
  </div>
  <br />

  <div>
    <%= form.label :is_showing, "上映中" %>
    <%= form.check_box :image_url %>
  </div>
  <br />

  <div>
    <%= form.label :created_at, "登録日時" %>
    <%= form.datetime_field :created_at %>
  </div>
  <br />

  <div>
    <%= form.label :updated_at, "更新日時" %>
    <%= form.datetime_field :updated_at %>
  </div>
  <br />

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
